{
  "ci": {
    "collect": {
      "staticDistDir": "./dist/angular-enterprise-blueprint/browser",
      "url": [
        "http://localhost/index.html?theme=light-default",
        "http://localhost/index.html?theme=light-warm",
        "http://localhost/index.html?theme=dark-default",
        "http://localhost/index.html?theme=dark-cool",
        "http://localhost/index.html?theme=high-contrast-light",
        "http://localhost/index.html?theme=high-contrast-dark"
      ],
      "numberOfRuns": 3
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 1
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 1
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 1
          }
        ],
        "first-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 2000
          }
        ],
        "largest-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 2500
          }
        ],
        "cumulative-layout-shift": [
          "warn",
          {
            "maxNumericValue": 0.1
          }
        ],
        "total-blocking-time": [
          "warn",
          {
            "maxNumericValue": 300
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
